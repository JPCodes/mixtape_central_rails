<h1><%= @user.name %>'s Profile</h1>

<ul>
  <% @user.mixtapes.each do |mixtape| %>
    <li><%= mixtape.title %></li>
  <% end %>
</ul>

<%= link_to "Edit", edit_user_path(@user) %>
<p><%= link_to "Delete", user_path(@user),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
